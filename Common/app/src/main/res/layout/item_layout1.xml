<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F5"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/x4"
        android:paddingBottom="@dimen/x4"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/x32"
            android:src="@mipmap/head2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8"
            android:layout_toRightOf="@+id/ivHead"
            android:layout_centerVertical="true"
            android:text="主症/起病/辅症"
            android:textSize="@dimen/x12"
            android:textColor="#666"
            />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="2018-01-15 11:37"
            android:textSize="@dimen/x10"
            android:textColor="#999"
            />

    </RelativeLayout>

    <View
        style="@style/LineHorizontal"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x32"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x10"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="疑似疾病1："
            android:textSize="@dimen/x11"
            android:textColor="#333"
            />

        <RelativeLayout
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv1"
            android:background="@drawable/shape_lightblue_corners"
            >

            <TextView
                android:id="@+id/tvDisease1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_centerVertical="true"
                android:text="急性左心衰竭"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/x10"
                />

            <ImageView
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/x14"
                android:layout_marginLeft="@dimen/x5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tvDisease1"
                android:src="@mipmap/zhu"
                />

        </RelativeLayout>

    </RelativeLayout>

    <View
        style="@style/LineHorizontal"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x32"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x10"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导诊科室："
            android:textSize="@dimen/x10"
            android:textColor="#999"
            />

        <TextView
            android:id="@+id/tvDepartment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv2"
            android:text="XXXXXXX"
            android:textSize="@dimen/x10"
            android:textColor="#999"
            />

    </RelativeLayout>


</LinearLayout>
