<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x21"
        android:gravity="center_horizontal"
        android:text="提示"
        android:textColor="#333"
        android:textSize="@dimen/x15" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x14"
        android:layout_marginBottom="@dimen/x17"
        android:gravity="center"
        android:text="请先扫描二维码登陆"
        android:textColor="#666"
        android:textSize="@dimen/x12" />

    <TextView
        android:id="@+id/tvLine1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#ededed"
        />

    <LinearLayout
        android:id="@+id/llRightAndLeft"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        >

        <Button
            android:id="@+id/leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:background="@drawable/selector_widget_dialog_leftbtn"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="@dimen/x12"/>

        <TextView
            android:id="@+id/dialog_normal_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>

        <Button
            android:id="@+id/rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/selector_widget_dialog_rightbtn"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="@dimen/x12"/>

    </LinearLayout>

    <Button
        android:id="@+id/singleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="#333"
        android:textSize="26sp"
        android:visibility="gone"
        />

    <!--<Button-->
        <!--android:id="@+id/singleBtn"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/x42"-->
        <!--android:background="@drawable/selector_widget_dialog_midbtn"-->
        <!--android:gravity="center"-->
        <!--android:text="确定"-->
        <!--android:textColor="#333"-->
        <!--android:textSize="@dimen/x12"-->
        <!--android:visibility="gone"/>-->


</LinearLayout>