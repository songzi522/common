<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_activity_glide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gs.common.activity.GlideActivity">

    <RelativeLayout
        android:id="@+id/rlBottomBanner"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/ivBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/ivQrcode"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="57dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivQrcode"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="57dp"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳市普惠医学技术有限公司"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/tvCompanyTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="电话: 0755-82977191"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tvCompanyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="地址:  深圳市福田区车公庙泰然工业区210栋西座3G"
                android:textSize="18sp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码注册，下载医悦APP"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:id="@+id/textView"
            android:layout_below="@+id/ivQrcode"
            android:layout_alignStart="@+id/ivQrcode" />

    </RelativeLayout>


</RelativeLayout>
